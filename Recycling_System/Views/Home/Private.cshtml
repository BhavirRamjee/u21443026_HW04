
<style>
    .center {
        display: flex;
        justify-content: center;
        align-items: center;
        border: green 2px solid;
        border-radius: 5px;
        margin: 50px 300px 50px 300px;
        padding: 20px;
        
    }

    
</style>
<div class="center">
    @using (Html.BeginForm("Private", "Home", FormMethod.Post))
    {
        <form>
            <H3 style="color:green">Private Learner</H3>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text "> <i class="fa fa-user"></i> </span>
                </div>
                <input name="classId" class="form-control" placeholder="Class: ID" type="text">
            </div>
            <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-balance-scale" aria-hidden="true"></i>
                    </span>
                </div>
                <input name="grade" class="form-control" placeholder=" Grade " type="number">
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-shopping-bag" aria-hidden="true"></i></span>
                </div>

                <input name="hours" class="form-control" placeholder="Hours" type="number">
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-clone" aria-hidden="true"></i>
                    </span>
                </div>
                <select class="form-control" name="stateOffer">
                    <option value="None">Offer by the State</option>
                    <option value="After Care">After Care</option>
                    <option value="Boot Camp">Boot Camp</option>
                    <option value="Summer School">Summer School</option>
                </select>
            </div> <!-- form-group end.// -->

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-th" aria-hidden="true"></i> </span>
                </div>
                <input class="form-control" placeholder="Amount of mentors" type="text" name="mentors">
            </div>
            <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-star" aria-hidden="true"></i>


                    </span>
                </div>
                <select class="form-control" name="levelEd">
                    <option value="None">Level Of Education</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                  
                </select>
            </div> <!-- form-group end.// -->
            <input type="submit" class="btn btn-success" value="Submit"/>
        </form>
    }


</div>
   
